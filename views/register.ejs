<%- include('partials/header', { title: 'Registration Page' }); %>

<main>
    <h2><%= message %></h2>
    <form action="/complete-registration" method="POST">
        <label for="countryOfOrigin">Country of Origin:</label>
        <input type="text" id="countryOfOrigin" name="countryOfOrigin">
      
        <label for="yearOfBirth">Year of Birth:</label>
        <input type="number" id="yearOfBirth" name="yearOfBirth">
      
        <label for="phoneNumber">Phone Number:</label>
        <input type="text" id="phoneNumber" name="phoneNumber">
      
        <label for="optIn">SMS Opt-In:</label>
        <input type="checkbox" id="optIn" name="optIn">
      
        <label for="preferredLanguage">Preferred Language:</label>
        <select id="preferredLanguage" name="preferredLanguage">
          <option value="English">English</option>
          <option value="Spanish">Spanish</option>
          <!-- Add other language options as needed -->
        </select>
      
        <button type="submit">Complete Registration</button>
      </form>
</main>

<p data-lang-placeholder="about"></p>
<p data-lang-placeholder="aboutText"></p>
<script src="/scripts/languageSwitcher.js"></script>

<%- include('partials/footer'); %>