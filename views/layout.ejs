<%# views/layout.ejs %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title data-lang-placeholder="titleLink"></title>
    <script src="https://accounts.google.com/gsi/client" async defer></script>
</head>
<body>

    <header>
        <% if (headerType === 'content') { %>
            <%- include('partials/contentHeader', { title: 'Content Header' }); %>
        <% } else { %>
            <%- include('partials/header', { title: 'User Dashboard' }); %>
        <% } %>
    </header>

    <main>
        <%- body %>
    </main>

    <footer>
        <p>&copy; 2024 My Website</p>
    </footer>
    <script>
        function initializeGAPI() {
            gapi.load('auth2', function () {
                gapi.auth2.init({
                    client_id: 'YOUR_CLIENT_ID.apps.googleusercontent.com',
                    scope: 'profile email'
                }).then(function () {
                    console.log('Google API initialized successfully.');
                }).catch(function (error) {
                    console.error('Error initializing Google API:', error);
                });
            });
        }

        window.onload = function () {
            if (typeof gapi !== 'undefined') {
                initializeGAPI();
            } else {
                console.error('Google API failed to load.');
            }
        };
    </script>
    <script src="/scripts/languageSwitcher.js"></script>
</body>
</html>


